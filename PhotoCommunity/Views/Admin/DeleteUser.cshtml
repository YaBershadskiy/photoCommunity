@model PhotoCommunity.Models.AdminUsersListViewModel

@{
    ViewBag.Title = Resources.Resource.TitleDeleteUser;
}

<h2>@ViewBag.Title</h2>

<h3>@Resources.Resource.DeleteUserMessage</h3>
<div id="delete-user-block">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.Resource.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Resources.Resource.Surname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Resources.Resource.About
        </dt>

        <dd>
            @Html.DisplayFor(model => model.About)
        </dd>

        <dt>
            @Resources.Resource.Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Resources.Resource.TitleConfirmEmail
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailConfirmed)
        </dd>

        <dt>
            @Resources.Resource.Password-Hash
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>

        <dt>
            @Resources.Resource.Tel
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    <button class="btn btn-default" onclick="document.getElementById('hidden-link').click();">@Resources.Resource.BackLink</button>
    <a id="hidden-link" href="@Url.Action("Index","Admin")" hidden="hidden"></a>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="@Resources.Resource.DeleteSubmitButton" class="btn btn-default" />
        </div>
    }
</div>
